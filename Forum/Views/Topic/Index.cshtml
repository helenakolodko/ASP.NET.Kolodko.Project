@model IEnumerable<Forum.ViewModels.TopicInfoViewModel>

@{
    ViewBag.Title = "Topics";
}

<div class="container content">
    <div class="col-md-offset-2 col-md-6">
        <div class="page-header">
            <h2>@ViewBag.Title</h2>
            @Html.ActionLink("Add new topic", "Create", null, new { @class = "btn btn-default" })
        </div>


        <table class="table table-striped table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Section)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAdded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Raiting)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink(item.Author, "Details", "User", new { id = item.AuthorId }, null)
                    </td>
                    <td>
                        @Html.ActionLink(item.Section, "Details", "Section", new { id = item.SectionId }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Raiting)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>