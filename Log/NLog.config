<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <extensions> 
    <add assembly="Log"/> 
  </extensions> 
      
  <targets>
    <target name="custom" type="CustomTarget" layout="${stacktrace}|${message}">
      <parameter name="@Time" layout="${longdate}"/>
    </target>
  </targets>

  <rules>
    <logger name="*" minLevel="Info" appendTo="custom"/> 
  </rules>
</nlog>